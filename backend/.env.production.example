# Production Environment Variables
# Copy this file to .env in production and fill in the values

# Application
NODE_ENV=production
PORT=5000
API_VERSION=v1

# Database (Get from Railway/Neon/Supabase)
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# Redis (Optional - for caching and sessions)
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_PASSWORD=redis-password

# JWT Secrets (Generate new ones: openssl rand -base64 32)
JWT_SECRET=GENERATE_NEW_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_NEW_SECRET_HERE
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS (Your Vercel frontend URL)
CORS_ORIGIN=https://your-app.vercel.app

# Stripe (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_COMMISSION_RATE=10

# AWS S3 (For file uploads in production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=kalavpp-prod-assets
AWS_CLOUDFRONT_URL=https://your-cloudfront-url.cloudfront.net

# Email (SendGrid or other provider)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@kalavpp.in
EMAIL_FROM_NAME=KALAVPP

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Digital Asset Protection
SIGNED_URL_EXPIRATION=3600
MAX_DOWNLOAD_ATTEMPTS=5

# Application URLs
FRONTEND_URL=https://your-app.vercel.app
ADMIN_PANEL_URL=https://your-app.vercel.app/admin

# Logging
LOG_LEVEL=info
